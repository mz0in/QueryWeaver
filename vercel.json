{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "app/public" }
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300
    }
  }
}