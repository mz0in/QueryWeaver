{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300
    }
  },
  "build": {
    "env": {
      "PIPENV_VENV_IN_PROJECT": "1",
      "PIPENV_INSTALL_DEV": "false"
    }
  },
  "installCommand": "pip install pipenv && pipenv install --system --deploy"
}